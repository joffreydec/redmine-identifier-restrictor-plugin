<% @defaults = Redmine::Plugin::registered_plugins[:redmine_project_id_restrictor].settings[:default] %>
<% def get_setting_val(name)
  val = !@settings[name].nil? ? @settings[name] : @defaults[name.to_sym]
  val = true if val === "true"
  val = false if val === "false"
  val
end %>
<fieldset>
    <legend>Configuration</legend>
    <p>
        <label>Filtre Regex</label>
        <%= text_field_tag 'settings[login_regexp]', get_setting_val('login_regexp') %>
    </p>
</fieldset>
